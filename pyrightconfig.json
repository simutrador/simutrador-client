{
  "venvPath": ".",
  "venv": ".venv",
  "include": ["src", "tests"],
  "exclude": [
    "**/__pycache__",
    "**/.venv",
    "**/build",
    "**/dist",
    "**/tests/**/fixtures"
  ],
  "pythonVersion": "3.11",
  "pythonPlatform": "All",
  "typeCheckingMode": "strict",
  "executionEnvironments": [
    { "root": "src" },
    { "root": "tests", "extraPaths": ["src"], "reportPrivateUsage": "none" }
  ],
  "reportMissingTypeStubs": "none"
}
